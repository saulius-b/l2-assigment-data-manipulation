{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "lib/**/*"
    ]
}